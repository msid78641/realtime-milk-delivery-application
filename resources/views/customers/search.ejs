<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Do you need milk?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Open your door to fresh milk & milk products</h1>
            

           <form action="/" method="post">
               <div class="relative"> <input type="text" id="name" name="name" class="border border-white-400 p-2 w-1/2 h-14 w-99 pr-8 pl-5 rounded z-0 focus:shadow focus:outline-none" placeholder="Search anything..." >
                    <i class="fa fa-search text-black-400 z-20 hover:text-gray-500"></i>  
                </div>
            <button class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">Search</button>
           </form>
        </div> 
    
        <div class="w-1/2">
            <img src="/img/hero-milk.jpg" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Milk & Dairy Product </h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% pizzas.forEach(function(pizza) { %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg"><%= pizza.price %></span>
                    <button data-pizza="<%= JSON.stringify(pizza) %>"
                        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>